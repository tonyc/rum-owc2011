<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(recipient) -%>">
  <span class='title'>
    <%= recipient.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), recipient_url(recipient),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_recipient_path(recipient),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_recipient_path(recipient),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => recipient.name),
        :method => :delete %>
  </span>
</li>
