<li class="campaign">
  <%= link_to image_tag(campaign.before_image_1.thumbnail("150x150>").url), campaign_url(campaign) %>
  <p class="name"><%= link_to campaign.name, campaign_url(campaign) %></p>
  <p class="target-level">Goal: <%= number_to_currency(campaign.target_level) %></p>
  <p class="status">Status: <%= campaign.status %></p>
  <p class="success_story"><%= raw(truncate(campaign.success_story, :length => 200)) %></p>
</li>