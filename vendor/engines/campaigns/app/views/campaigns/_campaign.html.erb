<li class="campaign">
  <p class="name"><%= link_to campaign.name, campaign_url(campaign) %></p>
  
  <% if campaign.before_image_1 %>
    <%= link_to image_tag(campaign.before_image_1.thumbnail("70x60>").url), campaign_url(campaign) %>
  <% end %>
  
  <p class="date">Date: <%= campaign.year %></p>
  <p class="target-level">Goal: <span><%= number_to_currency(campaign.target_level) %></span></p>
  <p class="view-link"><%= link_to "{ View }", campaign_url(campaign) %>
</li>