<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(campaign) -%>">
  <span class='title'>
    <%= campaign.name %>: <%= campaign.year %> &nbsp;&nbsp;&nbsp; <%= active_tag(campaign.active?) %><br/>
    Amount needed: <%= number_to_currency(campaign.target_level, :unit => '$') %><br/>
    Amount received: <%= number_to_currency(campaign.payment_total, :unit => '$') %><br/>
    <%= campaign.success_story.html_safe rescue '' %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), campaign_url(campaign),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_campaign_path(campaign),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_campaign_path(campaign),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => campaign.name),
        :method => :delete %>
  </span>
</li>
