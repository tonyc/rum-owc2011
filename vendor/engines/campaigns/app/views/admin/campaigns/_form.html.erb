<%= form_for [:admin, @campaign] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @campaign,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active -%> 
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:success_story].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:success_story].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class='field'>
    <%= f.label :year -%>
    <%= f.text_field :year -%>
  </div>
  
  <div class='field'>
    <%= f.label :before_image_1 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :before_image_1_id,
          :image => @campaign.before_image_1,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :before_image_2 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :before_image_2_id,
          :image => @campaign.before_image_2,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :after_image_1 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :after_image_1_id,
          :image => @campaign.after_image_1,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :after_image_2 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :after_image_2_id,
          :image => @campaign.after_image_2,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :after_image_3 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :after_image_3_id,
          :image => @campaign.after_image_3,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :target_level -%>
    <%= f.text_field :target_level -%>
  </div>
  
  <div class='field'>
    <%= f.label :status -%>
    <%= f.text_field :status -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.campaigns.campaign'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @campaign.name)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
