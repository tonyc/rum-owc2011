<% content_for :body_content_left do %>

 
  <% if @recipients.present? %>
    <% @recipients.each do |recip| %>
      <%= recip.name %>
      <%= amazon_simple_pay_form_tag do %>
        <%= text_field_tag 'amount' %><br/><br/>
        <%= hidden_field_tag 'referenceId', "#{recip.id}" %>
        <%= hidden_field_tag 'description', 'something else' %>
        <%= image_submit_tag('http://g-ecx.images-amazon.com/images/G/01/asp/golden_medium_donate_withlogo_whitebg.gif') %>
      <% end %>
    <% end %>
  <% end %>

  
  <ul id="payments">
    <% @payments.each do |payment| %>
      <li>
        <%= link_to payment.transaction_id, payment_url(payment) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
