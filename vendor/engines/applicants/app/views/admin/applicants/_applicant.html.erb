<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(applicant) -%>">
  <div class='title'>
    <%= applicant.name %>
    <span class="preview">&nbsp;&nbsp;status: <%= applicant.status %></span>
    <br/>Applied <%= applicant.created_at.to_s(:mdY) %>
    <div>
      <% if applicant.campaign %>
        <%= link_to "view campaign", edit_admin_campaign_path(applicant.campaign) %>
      <% else %>
        <%= link_to "create campaign", activate_campaign_admin_applicant_url(applicant) %>
      <% end %>
    </div>
  </div>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), applicant_url(applicant),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_applicant_path(applicant),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_applicant_path(applicant),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => applicant.name),
        :method => :delete %>
  </span>
</li>
