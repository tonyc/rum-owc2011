<%= form_for [:admin, @applicant] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @applicant,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :race -%>
    <%= f.text_field :race -%>
  </div>
  
  <div class='field'>
    <%= f.label :dob -%>
    <%= f.text_field :dob -%>
  </div>
  
  <div class='field'>
    <%= f.label :weight -%>
    <%= f.text_field :weight -%>
  </div>
  
  <div class='field'>
    <%= f.label :height -%>
    <%= f.text_field :height -%>
  </div>
  
  <div class='field'>
    <%= f.label :education -%>
    <%= f.text_field :education -%>
  </div>
  
  <div class='field'>
    <%= f.label :military_service -%>
    <%= f.text_field :military_service -%>
  </div>
  
  <div class='field'>
    <%= f.label :occupation -%>
    <%= f.text_field :occupation -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian -%>
    <%= f.text_field :guardian -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian_address -%>
    <%= f.text_field :guardian_address -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian_city -%>
    <%= f.text_field :guardian_city -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian_state -%>
    <%= f.text_field :guardian_state -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian_zip -%>
    <%= f.text_field :guardian_zip -%>
  </div>
  
  <div class='field'>
    <%= f.label :guardian_phone -%>
    <%= f.text_field :guardian_phone -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:personal_situation, :mobility_help].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:personal_situation, :mobility_help].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label "Agreed To Terms"  %>
    <%= f.check_box :agree_terms %>
  </div>

  <div class="field">
    <%= f.label "Willing to Participates"  %>
    <%= f.check_box :willing_participate %>
  </div>


  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, @statuses,:prompt => "Select a Status" %>
  </div>

  <% unless @applicant.new_record? %>
    <%= f.fields_for :notes do |builder| %>
      <div class="field">
        <%= builder.label "Notes" %><br />
        <%= builder.text_area :comment %>

      </div>
    <%  end %>
  <% end %>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.applicants.applicant'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @applicant.name)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
