<%= form_for [:admin, @contact] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @contact,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company -%>
  </div>
  
  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1 -%>
  </div>
  
  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2 -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>
  
  <div class='field'>
    <%= f.label :email_address -%>
    <%= f.text_field :email_address -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.contacts.contact'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @contact.last_name)
              } %>
<% end -%>
